<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carlos.calcured.MainActivity">

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btd"
        android:layout_alignTop="@+id/bt2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt2"
        android:layout_alignBaseline="@+id/bt1"
        android:layout_alignBottom="@+id/bt1"
        android:layout_toEndOf="@+id/bt1" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/bt4" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt5"
        android:layout_alignBaseline="@+id/bt4"
        android:layout_alignBottom="@+id/bt4"
        android:layout_toEndOf="@+id/bt4" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt6"
        android:layout_alignBaseline="@+id/bt5"
        android:layout_alignBottom="@+id/bt5"
        android:layout_toEndOf="@+id/bt5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt6"
        android:layout_toEndOf="@+id/bt6"
        android:id="@+id/btx"
        android:text="*" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/bt7" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt7"
        android:layout_toEndOf="@+id/bt7"
        android:id="@+id/bt8" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt8"
        android:layout_toEndOf="@+id/bt8"
        android:id="@+id/bt9" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt9"
        android:layout_toEndOf="@+id/bt9"
        android:id="@+id/btm" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/bt0" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt0"
        android:layout_toEndOf="@+id/bt0"
        android:id="@+id/btmod" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btmod"
        android:layout_toEndOf="@+id/btmod"
        android:id="@+id/btig" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btig"
        android:layout_toEndOf="@+id/btig"
        android:id="@+id/btma" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt3"
        android:layout_alignBaseline="@+id/btd"
        android:layout_alignBottom="@+id/btd"
        android:layout_toEndOf="@+id/bt2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="20"
        android:id="@+id/etcal"
        android:hint="0"
        android:layout_above="@+id/btd"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
